@model WebLayer.Models.ProductViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dd>
            <table class="table">
                <tr>
                    <th>Provider Name</th>
                    <th>@Html.ActionLink("AddProvider", "Index" ,"ProductProvider",new { productId = Model.Id },null )</th>
                </tr>
@if (Model.Providers != null)
{
    foreach (var item in Model.Providers)
    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "DeleteProductProvider" , new { productId = Model.Id, providerId = item.Id })
                            </td>
                        </tr>
                    }
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
